<Window x:Class="LoveCalculatorApp.Pages.VKLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoveCalculatorApp.Pages"
        mc:Ignorable="d"
        Title="" SizeToContent="Height" Width="300">
    <Grid>
        <StackPanel>
            <Label FontSize="24">Login</Label>
            <TextBox x:Name="loginTB" FontSize="24" Background="Transparent" BorderBrush="Transparent"></TextBox>
            <Label FontSize="24">Password</Label>
            <PasswordBox x:Name="passwordPB" FontSize="24" Background="Transparent" BorderBrush="Transparent"></PasswordBox>
            <Button Click="ButtonBase_OnClick" Background="Transparent" BorderBrush="Transparent" FontSize="24">Share</Button>
        </StackPanel>
    </Grid>
</Window>
